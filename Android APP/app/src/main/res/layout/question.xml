            </LinearLayout>

            <TextView
                android:id="@+id/question_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="@string/sleephour"
                android:textSize="20dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp">
                <TextView
                    android:id="@+id/answer8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#000"
                    android:background="@drawable/edittext_background"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/question8"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:background="@drawable/down"
                    android:textSize="20dp"/>
            </LinearLayout>

            <Button
                android:id="@+id/submit"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="submit"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/salmonbutton_selector"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>
    </ScrollView>
    <com.dpizarro.uipicker.library.picker.PickerUI
        android:id="@+id/picker1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.dpizarro.uipicker.library.picker.PickerUI
        android:id="@+id/picker2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.dpizarro.uipicker.library.picker.PickerUI
        android:id="@+id/picker3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.dpizarro.uipicker.library.picker.PickerUI
        android:id="@+id/picker4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.dpizarro.uipicker.library.picker.PickerUI
        android:id="@+id/picker5"
        android:layout_width="match_parent"
